{
  "name": "dslr-photo-copier-tool",
  "productName": "DSLR Photo Copier Tool",
  "version": "0.1.0",
  "packageManager": "pnpm@8",
  "description": "Electron starter app to copy photos from DSLR memory cards",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --win --mac --linux --publish never",
    "build:all": "electron-builder --win --mac --linux"
  },
  "keywords": ["electron","dslr","photos","copy"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4"
  }
  ,
  "dependencies": {
    "csv-parse": "^5.3.6"
  },
  "build": {
    "appId": "com.dslr-photo-copier.app",
    "productName": "DSLR Photo Copier Tool",
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
